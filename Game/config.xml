      </image>
     </images>
	 <labels>
	  <label name="lel">
        <text value = "Best Game Ever"/>
        <position x="50" y="50"/>
		<color R="200" G="100" B="100" A="200"/>
		<font value = "Open_Sans Bold"/>
      </label>
	 </labels>
    </StartMenu>
  </scene>

  <map>
    <folder>maps/</folder>
	  <levels>
      <level name="iso.tmx"/>
	  </levels>
  </map>

